! $AMRVAC_DIR/setup.pl -d=22 -g=16,16 -p=hd -u=nul .......

&testlist
        teststr=''
/

&filelist
  base_filename='./output_vari/fld'
  autoconvert      = T
  convert_type     = 'vtuBCCmpi'
  saveprim         = T
  nwauxio = 10
/

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   !ditsave_dat     = 3
   !ditsave_log     = 3
   dtsave_dat     = 4.d-3
   dtsave_log     = 1.d-3
/

 &stoplist
   time_max = 2.d-1
   dtmin = 1.0d-20
   !it_max = 350
/

 &methodlist
   time_integrator = 'onestep'
   flux_scheme     = 20*'tvdlf' !'tvdlf'/'hll'
   limiter         = 20*'minmod' !'minmod'/'koren'
   check_small_values = .true.
   small_values_method = 'replace'
   small_pressure = 1.d-6
   small_density = 1.d-6
   !tvdlfeps = 0.d0
   !typesourcesplit = 'sf'
/

&boundlist
  nghostcells  =  2
  typeboundary_min1 = 5*'periodic'
  typeboundary_max1 = 5*'periodic'
  typeboundary_min2 = 5*'special'
  typeboundary_max2 = 'noinflow','noinflow','noinflow','noinflow','special'
  !typeghostfill= 'copy'
  internalboundary = T
/

 &meshlist
   refine_max_level   = 1
   domain_nx1         = 400
   domain_nx2         = 1600
   block_nx1          = 400
   block_nx2          = 400
   xprobmin1       =  -7.d-4
   xprobmax1       =  7.d-4
   xprobmin2       =  0.0d0
   xprobmax2       =  6.d-3
   iprob=1
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
 /

 &paramlist
  courantpar       = 0.3d0
  !dtpar = 1d-5
 /

 &hd_list
  hd_gravity = .true.
  hd_energy = .true.
  hd_gamma = 1.000000001d0 !1.6666667d0 !5.d0/3.d0
  hd_fld = .true.
 /

 &fld_list
  fld_kappa0 = 0.34d0
  fld_mu = 0.6d0
  fld_split = .false.
  fld_maxdw = 2000
  fld_bisect_tol = 1.d-3
  fld_adi_tol = 1.d-3
  fld_max_fracdt = 100.d0
  fld_diff_testcase = .false.
  fld_const_opacity = .false.
  fld_complete_diffusion_limit = .false.
  fld_bound_min1 = 'periodic'
  fld_bound_max1 = 'periodic'
  fld_bound_min2 = 'fixed'
  fld_bound_max2 = 'cont'
  fld_Diffusion = .true.
  fld_Rad_force = .true.
  fld_Energy_interact = .false.
  fld_Energy_advect = .true.
 /
